citHeader("To cite rcarbon in publications use:")
citEntry(entry = "Manual",
    title = "rcarbon: Methods for calibrating and analysing radiocarbon dates",
    author = personList(as.person("Andrew Bevan"),
			as.person("Enrico R. Crema")),
    year = "2020",
    url = "https://github.com/ahb108/rcarbon",
    textVersion =
    paste("Bevan, A. and Crema, E.R. (2020)",
    "rcarbon v1.4.0: Methods for calibrating and analysing radiocarbon dates",
    "URL: https://CRAN.R-project.org/package=rcarbon") 		
  )
